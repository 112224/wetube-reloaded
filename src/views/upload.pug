extends base

block content 
    div 
        video#preview
        button#startBtn Start Recording
        button(disabled, hidden=true, id="downloadBtn") Download Record
    if errorMessage 
        span=errorMesaage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file", accept="video/*", requied, id="video", name="video")
        label(for="thumb") Thimbnail File 
        input(type="file", accept="image/*", requied, id="thumb", name="thumb")
        input(name="title",placeholder="Title", required, type="text", maxlength=80)
        input(name="description",placeholder="Description", required, type="text",minlength=20)
        input(name="hashtags",placeholder="hashtags, separated by comma.", required, type="text")
        input(type="submit", value="Upload Video")

block scripts 
    script(src="/static/js/recorder.js") 